<div class="container py-5">
    <div class="row">
        <div class="col-12 col-lg-10 col-xl-8 mx-auto">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Random Password Generator<i class="fas fa-key"></i></h5>
                    <hr>
                    <form action="/" method="POST">
                        <div class="row mb-3 g-2">
                            <label class="col-md-4 col-form-label" for="length">Password Length</label>
                            <div class="col-me-8">
                                <input class="form-control" type="number" name="length" id="length" min="4" max="16">
                                <small class="text-muted form-text">Length is avaliable between 4-16</small>
                            </div>
                        </div>

                        <div class="row mb-2 g-2 align-items-center">
                            <label class="col-md-4 col-form-label" for="lowercase">Include Lowercase Characters</label>
                            <div class="col-md-8">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="checkbox" name="lowercase" id="lowercase">
                                    <label class="form-check-label" for="lowercase">(e.g. abcdefg)</label>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-2 g-2 align-items-center">
                            <label class="col-md-4 col-form-label" for="uppercase">Include Uppercase Characters</label>
                            <div class="col-md-8">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="checkbox" name="uppercase" id="uppercase">
                                    <label class="form-check-label" for="uppercase">(e.g. ABCDEFG)</label>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-2 g-2 align-items-center">
                            <label for="numbers" class="col-md-4 col-form-label">Include Numbers</label>
                            <div class="col-md-8">
                                <div class="form-check form-check-inline">
                                    <input type="checkbox" class="form-check-input" id="numbers" name="numbers">
                                    <label for="numbers" class="form-check-label">(e.g. 123456)</label>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-2 g-2 align-items-center">
                            <label for="symbols" class="col-md-4 col-form-label">Include Symbols</label>
                            <div class="col-md-8">
                                <div class="form-check form-check-inline">
                                    <input type="checkbox" class="form-check-input" id="symbols" name="symbols">
                                    <label for="symbols" class="form-check-label">(e.g. @#$%)</label>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3 g-2">
                            <label for="exclude-characters" class="col-md-4 col-form-label">Exclude Characters</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="exclude-characters"
                                    name="excludeCharacters">
                                <small class="text-muted form-text">These characters will not appear in the
                                    password</small>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-success">Generate Password</button>
                    </form>
                </div>

                <small class="card-footer text-muted text-end">
                    Idea is inspired by <a href="https://passwordgenerator.net/" target="_blank">Strong Random
                        Password</a>
                </small>
            </div>
        </div>
    </div>
</div>